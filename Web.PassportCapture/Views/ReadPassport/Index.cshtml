@using PassportModels
@model PassportViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";

    Gender[] genderList = new[]
    {
        new Gender{Abbreviation = "<", Description = "Other"},
        new Gender{Abbreviation = "F", Description = "Female"},
        new Gender{Abbreviation = "M", Description = "Male"}
    };


    var genderSelect = new SelectList(genderList, "Abbreviation", "Description");
}


@section scripts
{
    <script src="lib/jquery/dist/jquery.min.js"></script>
    <script src="lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="lib/jquery-validation/dist/additional-methods.min.js"></script>
    <script src="lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<div class="row h-100  justify-content-center align-items-center  bg-light">

    <form asp-action="Validate" class="col-12">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row">
            <div class="col-lg-4">
                <h3>Passport Photo</h3>
                <img/>
            </div>
            <div class="col-8">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="PassportNo"></label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" asp-for="PassportNo"/>
                    </div>

                    <span asp-validation-for="PassportNo" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Nationality</label>
                    <div class="col-sm-10">
                        @Html.DropDownListFor(m => m.Nationality, ViewBag.GetNations as SelectList, new {@class = "form-control", @type = "text"})
                    </div>

                    <span asp-validation-for="Nationality" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="DateOfBirth">Date of Birth</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="date" asp-for="DateOfBirth"/>
                    </div>

                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="Gender">Gender</label>
                    <div class="col-sm-10">
                        <select class="form-control" type="text" asp-for="Gender" asp-items="genderSelect"></select>
                    </div>

                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="DateOfExpiration">Date of Expiry</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="date" asp-for="DateOfExpiration"/>
                    </div>

                    <span asp-validation-for="DateOfExpiration" class="text-danger"></span>
                </div>

            </div>
            <div class="form-inline col-12">
                <label class="col-sm-1 col-form-label">Line 2</label>
                <input class="col-sm-1 form-control-sm" type="text" asp-for="PassportNumber"/>
                <input class="col-sm-1 form-control-sm" type="text" asp-for="PassportNumberChecksum"/>
                <input class="col-sm-1 form-control-sm" type="text" asp-for="NationalityCode"/>
                <input class="col-sm-1 form-control-sm" type="text" asp-for="DateOfBirthMzr"/>
                <input class="col-sm-1 form-control-sm" type="text" asp-for="DOBChecksum"/>
                <input class="col-sm-1 form-control-sm" type="text" asp-for="Sex"/>
                <input class="col-sm-1 form-control-sm" type="text" asp-for="PassportExpiration"/>
                <input class="col-sm-1 form-control-sm" type="text" asp-for="ExpirationChecksum"/>
                <input class="col-sm-1 form-control-sm" type="text" asp-for="PersonalNumber"/>
                <input class="col-sm-1 form-control-sm" type="text" asp-for="PersonalNumberChecksum"/>
                <input class="col-sm-1 form-control-sm" type="text" asp-for="FinalChecksum"/>
                <span asp-validation-for="PassportNumber" class="text-danger"></span>
                <span asp-validation-for="PassportNumberChecksum" class="text-danger"></span>
                <span asp-validation-for="NationalityCode" class="text-danger"></span>
                <span asp-validation-for="DateOfBirthMzr" class="text-danger"></span>
                <span asp-validation-for="DOBChecksum" class="text-danger"></span>
                <span asp-validation-for="Sex" class="text-danger"></span>
                <span asp-validation-for="PassportExpiration" class="text-danger"></span>
                <span asp-validation-for="ExpirationChecksum" class="text-danger"></span>
                <span asp-validation-for="PersonalNumber" class="text-danger"></span>
                <span asp-validation-for="PersonalNumberChecksum" class="text-danger"></span>
                <span asp-validation-for="FinalChecksum" class="text-danger"></span>
            </div>
        </div>
        <div class="col text-center">
            <button class="button" type="submit">Validate</button>
        </div>


    </form>
</div>

